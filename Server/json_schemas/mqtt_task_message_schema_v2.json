{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id" : "http://www.my-schema.com/mqtt_message_schema_v2.json",
  "title": "MQTT Message",
  "description": "JSON Schema for MQTT Message (Exam Extension)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "path to the JSON Schema to use for the validation of the JSON file describing the MQTT Message"
    },
    "operation": {
      "type": "string",
      "description": "Type of operation performed on the task: Creation (CREATE), Deletion (DELETE), Modifications e.g deadline update, change visibility (UPDATE) or Assignation (ASSIGN)",
      "enum": ["CREATE", "DELETE", "UPDATE", "ASSIGN"]
    },
    "status": {
      "type": "string",
      "description": "Status of the task in case UPDATE operation ",
      "enum": ["active", "inactive", "private", "public", "other"]
    },
    "userId": {
      "type": "integer",
      "description": "identified of the user"
    },
    "userName": {
      "type": "string",
      "description": "name of the user"
    },
    "taskId": {
      "type": "integer",
      "description": "Task id of the user"
    },
    "payload": {
      "$ref": "./task_schema.json#"
    }
  },
  "required": ["type"],
  "allOf": [
    {
      "if": {
        "properties": { "operation": {"const": "CREATE"} }
      },
      "then": {
        "required": ["payload"]
      }
    },
    {
      "if": {
        "properties": { "operation": { "const": "ASSIGN" } }
      },
      "then": {
        "required": ["userId", "userName", "active"]
      }
    }
  ]
}
